<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "border-2 inline-block px-3"} do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1>註冊</h1>
  
  <div class="field">
    <%= f.label 'Email' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label '密碼(最少六碼)' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label '密碼確認' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "註冊", class: "btn btn-success" %>
  </div><br />
  
  <button class='btn btn-primary block'><%= render "devise/shared/links" %></button><br />
<% end %>



