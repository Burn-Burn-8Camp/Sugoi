<div class="min-h-screen bg-no-repeat bg-cover bg-center"
	style="background-image: url('https://images.unsplash.com/photo-1486520299386-6d106b22014b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80')">
	<div class="flex justify-end">
		<div class="bg-white min-h-screen w-1/2 flex justify-center items-center">
			<div>

				<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "border-2 inline-block px-3"} do |f| %>
					<div>
						<span class="text-sm text-gray-900">Welcome back</span>
						<h1 class="text-2xl font-bold">Login to your account</h1>
					</div>
					<div class="mt-5">
                        <%= f.label 'Email',class:"block text-md mb-2"%>
                        <%= f.email_field :email, autofocus: true, autocomplete: "Email",class:"px-4 w-full border-2 py-2 rounded-md text-sm outline-none"  %>
                    </div> 
						<div class="mt-5">
                            <%= f.label '密碼(最少六碼)',class:"block text-md mb-2"%>
                            <% if @minimum_password_length %>
                            <% end %>
                            <%= f.password_field :password, autocomplete: "new-password"  ,class:"px-4 w-full border-2 py-2 rounded-md text-sm outline-none"  %>
                        </div> 
                        <div class="mt-5">
                            <%= f.label '密碼確認',class:"block text-md mb-2"%>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"px-4 w-full border-2 py-2 rounded-md text-sm outline-none"  %>
                        </div><br />
							<div class="flex justify-between">
								<div>
									<input class="cursor-pointer"  type="radio" name="rememberme">
									<span class="text-sm">Remember Me</span>
								</div>
								<span class="text-sm text-blue-700 hover:underline cursor-pointer">Forgot password?</span>
							</div>
							<div class="mt-4 mb-3 w-full bg-green-500 hover:bg-green-400 text-white py-2 rounded-md transition duration-100">
								<div >
                                    <%= f.submit "註冊", class: "btn btn-success" %>
                                </div>
                                <div>
								<div class="flex justify-between">
                                <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <span class="sr-only">Sign in with google</span>
                                    <img class=" h-5 cursor-pointer" src="https://i.imgur.com/arC60SB.png" alt="">
                                </a>
                                </div>
                                <div class="flex justify-between">
                                    <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <span class="sr-only">Sign in with GitHub</span>
                                        <svg class="h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                </div>
							</div>
                            <%= render "devise/shared/links" %>
				<% end %> 
			</div>
		</div>
	</div>
</div>
</div>