<div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-3">
        <p>Hello, <%= current_user.name %>
        <%= render 'form', room: Room.new %>
        <hr>
        <% @rooms.each do |room| %>
          <%= link_to room do %>
            <div class="card mb-2">
              <div class="card-body">
                <%= room.name %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="col-9">
        <% if @room.present? %>
          <div class="chat-room">
            <div id="chat-room-content">
              <p><%= @room.name %></p>
              <% @room.messages.each do |message| %>
                <div>
                  <p><%= message.content %> - <%= message.user.name %> [ <%= message.created_at %> ]</p>
                  <div style="width: 30px"><%= image_tag message.user.image_url %></div>
                </div>
              <% end %>
            </div>
            <div class="chat-box">
              <%= render 'messages/form',message: Message.new,room: @room %>
            </div>
          <p><%= @room.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>