<div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:pb-24 lg:px-8">
      <div class="max-w-xl">
        <h1 class="text-2xl font-extrabold tracking-tight text-gray-900">訂單列表</h1>
      </div>

			<div class='mt-5'>
				<div>
					<nav class="relative z-0 rounded-lg shadow flex divide-x divide-gray-200" aria-label="Tabs">
						<%= link_to pending_orders_path, class: "text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 focus:z-10" do %>
							<span class='text-md'>未付款</span>
							<span><%= @state_hash['pending'] %></span>
						<% end %>
						<%= link_to processing_orders_path, class: "text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 focus:z-10" do %>
							<span class='text-md'>處理中</span>
							<span><%= @state_hash['paid'] %></span>
						<% end %>
						<%= link_to shipped_orders_path, class: "text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 focus:z-10" do %>
							<span class='text-md'>待收貨</span>
							<span><%= @state_hash['in_transit'] %></span>
						<% end %>
						<%= link_to completed_orders_path, class: "text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 focus:z-10" do %>
							<span class='text-md'>已完成</span>
							<span><%= @state_hash['arrived'] %></span>
						<% end %>
						<%= link_to cancelled_orders_path, class: "text-gray-900 rounded-l-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 focus:z-10" do %>
							<span class='text-md'>已取消</span>
							<span><%= @state_hash['cancelled'] %></span>
						<% end %>
					</nav>
				</div>
			</div>
  
      <div class="mt-5">
        <div class="space-y-10">
				<% if @orders.first === nil %>
					<div class='flex justify-center'>
						<%= image_tag("OpenDoodles - LayingDown") %>
					</div>
				<% else %>
					<%= render 'components/order_list', orders: @orders %>
				<% end %>
        </div>
      </div>
    </div>
  </div>
  