<div class="grid grid-cols-6 lg:grid-clos-6 gap-3 ">
  <% products.each do |product| %>
    <div class="card bordered">
      <figure>
        <img src="https://picsum.photos/id/1005/400/250">
      </figure> 
      <div class="card-body">
        <%= link_to product_path(product) do %>
          <h2 class="card-title">品名:<%= product.name %></h2>
        <% end %>
        <p>所屬商店：<%= product.store.name %></p>
        <p>價錢：<%= product.price.to_i %></p>
      </div>
    </div> 
  <% end %>
</div>