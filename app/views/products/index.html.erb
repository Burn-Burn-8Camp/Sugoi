

<h1>商品列表</h1>

<%= link_to "新增商品",new_product_path %>



<div class='grid grid-cols-2 lg:grid-cols-6 gap-3'>
  <% @products.each do |product| %>
    <div class="card bordered">
      <figure>
        <img src="https://picsum.photos/id/1005/400/250">
      </figure>
      <div class="card-body">
        <h2 class="card-title">品名：<%= product.name %></h2>
        <p>價錢：<%= product.price %></p>
        <p>商品描述：<%= product.describtion %></p>
      </div>
    </div>
  <% end %>
</div>

<%== pagy_nav(@pagy) %>

<table>
  <thead>
    <tr>
      <td>商品名稱</td> 
      <td>價錢</td>
      <td>數量</td>
      <td>描述</td>
      <td>類別</td>
      <td>材料</td>
      <td>製造方法</td>
      <td>國家</td>
      <td>內容</td>
      <td>修改</td>
      <td>刪除</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.describtion %></td>
      <td><%= product.category %></td>
      <td><%= product.material %></td>
      <td><%= product.manufacturing_method %></td>
      <td><%= product.country %></td>
      <td><%= product.content %></td>
      <td><%= link_to "修改商品",edit_product_path(product) %></td>
      <td><%= link_to "刪除商品",product_path(product), 
                               method: "DELETE",
                               data: {confirm: '刪除成功！'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>




