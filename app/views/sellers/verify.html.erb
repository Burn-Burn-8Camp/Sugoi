<div class="min-h-screen bg-red-200  flex">
  <div class="flex-1 flex flex-col justify-center py-5 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div class='flex'>
       <h1 class="mt-3 text-3xl font-extrabold text-white">
            請輸入驗證碼
       </h1>
       <img class="h-12 w-auto ml-3" src="/images/阿榮去背.png" alt="Workflow">
      </div>
      <div class="mt-8">
        <div class="mt-6">
          <%= form_for(current_user, url:seller_verify_store_path, method: "post", html: {class: 'space-y-6'}) do |f| %>
          <div>
            <%= f.label '驗證碼', class: "block text-sm font-medium text-red-500" %>
            <div class="mt-1">
              <%= f.password_field :captcha, maxlength:8, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            </div>
          </div>
          <div>
            <%= f.submit '送出', class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-300 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden lg:block w-0 flex-1 pink-light">
    <div class='w-full h-full flex items-center justify-center'>
      <img class="inset-0 object-contain lg:w-96 lg:h-96"
          src="/images/開店頁面.jpg"
          alt="">
    </div>
  </div>
</div>