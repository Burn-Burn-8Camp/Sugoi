<h1>基本資料</h1>


<div class="">
  <%= form_for(@user, url:edit_path) do |f| %>
  
  <div>
    <%= f.label :name, '顯示暱稱' %><br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email,"您的電子信箱" %><br />
    <%= f.text_field :email %>
  </div>

  <div class="">
    <%= f.label :gender,"性別" %><br />
    <%= f.text_field :gender, required: true, placeholder: 'Gender', class: 'form-control' %>
  </div>

  <div class="">
    <%= f.label :date, "生日" %><br />
    <%= date_field(:date, :born_on) %>
  </div>

  <div class="">
    <%= f.label :country, "所在地" %><br />
    <%= f.text_field :country %>
  </div>
  <%end %>
</div>

<br />

<h2>上載大頭貼</h2>

<br />
<%= form_with(model: @user, url: '', local: true, :html => { multipart: true }) do |form| %>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div> 
  
<%end %>



