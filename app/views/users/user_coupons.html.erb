<h3 class="text-center my-6">您所領取的折價券</h3>
<div class="coupon-container flex flex-col">
  <% @coupons.each do |coupon| %> 
    <div class="card  md:card-side md:w-8/12 m-5">
      <div class="picture bg-red-400 md:w-1/3 flex justify-center align-center">
        <i class="far fa-money-bill-alt text-8xl self-center text-gray-100"></i>
      </div>  
      <div class="card-body md:w-2/3 md:flex bg-gray-200">
        <div class="card-description">
          <h2 class="card-title text-center md:text-left"><%= coupon.coupon.name %></h2> 
          <p class="text-center border-gray-300 md:border-0 md:text-left pb-6">抵用<%= coupon.coupon.value.to_i %>元</p>
          <p class="text-center border-gray-300 md:border-0 md:text-left pb-6"><%= coupon.status %></ㄋ>
        </div>     
      </div>
    </div>  
  <% end %>
</div>