<h1>訂單總覽</h1>

<div>
<table>
	<thead>
		<tr>
			<th>訂單序號</th>
			<th>訂單總金額</th>
			<th>訂單明細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.serial %></td>
			<td><%= order.total %></td>
			<td><%= link_to '前往明細', detail_store_order_path(order), class: 'border-2 rounded p-3' %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>