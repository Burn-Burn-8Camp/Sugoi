<section>
	<div class="bg-red-300 text-white py-20">
		<div class="container mx-auto flex flex-col md:flex-row my-6 md:my-24">
			<div class="flex flex-col w-full lg:w-1/3 p-8">
				<p class="text-3xl font-medium md:text-5xl my-4 leading-relaxed md:leading-snug">SUGOII歡迎您</p>
				<p class="text-sm font-normal md:text-base leading-snug text-gray-50 text-opacity-100">
					SUGOII安心販賣您的商品
				</p>
			</div>
			<div class="flex flex-col w-full lg:w-2/3 justify-center">
				<div class="container w-full px-4">
					<div class="flex flex-wrap justify-center">
						<div class="w-full lg:w-6/12 px-4">
							<div
								class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-white">
								<div class="flex-auto p-5 lg:p-10">
									<h4 class="text-2xl mb-4 text-black font-semibold">編輯您的商店</h4>
									  <%= form_for @store, url: store_path do |f| %>
										<div class='relative w-full mb-3'>
										  <%= f.label '商店名稱', class: "block uppercase text-gray-700 text-xs font-bold mb-2" %>
										  <%= f.text_field :name, class:"border-0 px-3 py-3 rounded text-sm shadow w-full
																		bg-blue-200 placeholder-black text-gray-800 outline-none focus:bg-blue-200" %>
										</div>
										<div class="relative w-full mb-3">
											<%= f.label "商店介紹", class: "block uppercase text-gray-700 text-xs font-bold mb-2" %>
											<%= f.text_area :introduction, class: "border-0 px-3 py-3 bg-blue-200 placeholder-black text-black rounded text-sm shadow focus:outline-non+ w-full" %>
				            </div>
					           <div>
										   <%= f.text_field :user_id, value: current_user.id, type: 'hidden' %>
										 </div>
										 <div class="text-center mt-6">
										   <%= f.submit '送出', class:"bg-red-300 border-red-300 hover:bg-blue-200 hover:border-blue-200 text-black text-center mx-auto text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 " %>
											</div>
									  <% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>