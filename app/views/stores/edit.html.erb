<h1>編輯商店</h1>

<%= form_for @store, url: store_path, method: 'PATCH' do |f| %>
<div>
	<%= f.label :name, "商店名稱" %>
	<%= f.text_field :name %>
</div>
<div>
	<%= f.label :introduction, "商店介紹" %>
	<%= f.text_area :introduction %>
</div>
<div>
	<%= f.text_field :user_id, value: current_user.id, type: 'hidden' %>
</div>
<div>
	<%= f.submit "更新" %>
</div>
<% end %>